<nav class="bg-gray-800">
  <div class="mx-auto px-6 md:px-12">
    <div class="flex h-16 items-center justify-between">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <a href="<%= root_path %>" class="text-white text-2xl">INDUS HOSPITAL</h2>
        </div>
      </div>
      <% if user_signed_in? %>
        <% if  @current_user_type == "Doctor" %>
          <%= link_to "Update Password", edit_password_doctor_path(current_user.id), method: :update, class: "" %>
        <% elsif  @current_user_type == "Patient" %>
          <%= link_to "Update Password", edit_password_patient_path(current_user.id), method: :update, class: "" %>
        <% end %>
      <% end %>
      <div class="hidden sm:block">
        <div class="ml-4 flex items-center md:ml-6">
          <div class="relative ml-3">
            <% if user_signed_in? %>
              <% if  @current_user_type == "Doctor" %>
                <a href="<%= edit_doctor_path(current_user) %>" class="flex max-w-xs items-center rounded-full bg-gray-800 text-sm">
                  <%= current_user.name %>
                  <%= avatar(current_user) %>
                </a>
              <% elsif  @current_user_type == "Patient" %>
                <a href="<%= edit_patient_path(current_user) %>" class="flex max-w-xs items-center rounded-full bg-gray-800 text-sm">
                  <%= current_user.name %>
                  <%= avatar(current_user) %>
                </a>
              <% end %>
            <% else %>
              <%= link_to "Sign in", new_user_session_path, class: "text-gray-300 hover:bg-gray-700 hover:text-white px-3 py-2 rounded-md text-sm font-medium" %>
            <% end %>
          </div>
        </div>
      </div>
      <div class="sm:hidden">
        <button class="<%= nav_link_class(nil) %>" onclick="toggleMenu()">
          <%= heroicon "bars-3" %>
        </button>
      </div>
    </div>
  </div>

  <div class="sm:hidden hidden mobile-menu">
    <div class="space-y-2 px-2 pb-3 sm:px-3">
      <a href="<%= root_path %>" class="<%= nav_link_class("home", "block") %>">Home</a>
      <% unless user_signed_in? %>
        <a href="<%= new_user_session_path %>" class="<%= nav_link_class(nil, "block") %>">Sign in</a>
      <% end %>
    </div>
    <% if user_signed_in? %>
      <div class="border-t border-gray-700 py-4">
        <a href="<%= edit_user_path %>">
          <div class="flex items-center px-5">
            <div class="flex-shrink-0">
              <%= avatar(current_user) %>
            </div>
            <div class="ml-3">
              <div class="text-base font-medium leading-none text-white"><%= current_user.name %></div>
              <div class="text-sm font-medium leading-none text-gray-400"><%= current_user.email %></div>
            </div>
          </div>
        </a>
      </div>
    <% end %>
  </div>
</nav>
