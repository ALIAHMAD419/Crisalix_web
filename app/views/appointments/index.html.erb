<h1>Appointments</h1>

<% if @appointments.any? %>
  <table>
    <thead>
      <tr>
        <th>Doctor</th>
        <th>Patient</th>
        <th>Appointment Date</th>
        <th>Status</th>
        <% if @current_user_type == "Patient" %>
        <th>Actions</th> 
        <%end%>
      </tr>
    </thead>
    <tbody>
      <% @appointments.each do |appointment| %>
        <tr>
          <td><%= appointment.doctor.name %></td>
          <td><%= link_to appointment.patient.name, show_patient_patient_path(appointment) %></td>
          <td><%= appointment.appointment_date %></td>
          <td><%= appointment.status %></td>
          <% if @current_user_type == "Patient"%>
            <td>
              <%= link_to 'Show', appointment_path(appointment) %> |
              <%= link_to 'Edit', edit_appointment_path(appointment) %> |
              <%= link_to 'Destroy', appointment_path(appointment), method: :delete, data: { confirm: 'Are you sure?', turbo: false } %>
            </td>
          <%end%>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>No appointments found.</p>
<% end %>
<% if @current_user_type == "Patient"%>
  <%= link_to 'New Appointment', new_appointment_path %>
<%end%>